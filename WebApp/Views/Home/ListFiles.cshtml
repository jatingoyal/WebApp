@using WebApp.Models
@{
    ViewBag.Title = "ListFiles";
    List<FileModel> files = (List<FileModel>)ViewData["DirFiles"];
    string folder = (string)ViewData["Folder"];
}

<div class="jumbotron">
    <h1>@folder</h1>
    @foreach (var file in files)
    {
        <p><a href='@string.Format("/Home/DownloadFile?fileId={0}", file.Id)'>@file.Name</a></p>
    }
</div>

